<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Regular12">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="Regular16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="Medium16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="hintMedium16" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="hintRegular12">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Medium19">
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Medium22">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="Bold32">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="ButtonNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="itemTextAppearanceActive">@style/Regular12</item>
        <item name="itemTextAppearanceInactive">@style/Regular12</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/white_black</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:drawableTint">@color/black_white</item>
        <item name="titleTextAppearance">@style/Regular12</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white_black</item>
    </style>

    <style name="placeholderMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black_universal</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:gravity">bottom</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

</resources>
