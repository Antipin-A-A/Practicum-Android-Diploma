<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Regular12">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="Regular16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="Medium16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="Medium22">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="Bold32">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="ButtonNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="itemTextAppearanceActive">@style/Regular12</item>
        <item name="itemTextAppearanceInactive">@style/Regular12</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/white_black</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:drawableTint">@color/black_white</item>
        <item name="titleTextAppearance">@style/Regular12</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white_black</item>
    </style>

    <style name="placeholderMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

</resources>
