<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu_detalies"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:title="Вакансия"
        app:titleTextAppearance="@style/Medium22" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/indent_16dp"
        android:paddingEnd="@dimen/indent_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android-разработчик"
            android:textAppearance="@style/Bold32" />
        <TextView
            android:id="@+id/jobsalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="от 100 000 ₽"
            android:textAppearance="@style/Medium22" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_16dp"
            android:paddingTop="@dimen/indent_16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/lightGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/empty_image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/indent_8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleCadr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Еда"
                        android:textAppearance="@style/Medium22" />

                    <TextView
                        android:id="@+id/subtitleCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Москва"
                        android:textAppearance="@style/Regular16" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Требуемый опыт"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="От 1 года до 3 лет"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_8dp"
            android:text="Полная занятость, Удаленная работа"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_32dp"
            android:text="Описание вакансии"
            android:textAppearance="@style/Medium22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_16dp"
            android:text="Обязанности"
            android:textAppearance="@style/Medium16" />

        <TextView
            android:id="@+id/Text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_4dp"
            android:text="Разрабатывать новую функциональность приложения\n
Помогать с интеграцией нашего SDK в другие приложения\n
Проектировать большие новые модули\n
Писать UI- и unit-тесты\n
Следить за работоспособностью сервиса и устранять технический долг"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_16dp"
            android:text="Требования"
            android:textAppearance="@style/Medium16" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_4dp"
            android:text="100% Kotlin \nWebRTCCI по модели Trunk \nBased Development"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_16dp"
            android:text="Условия"
            android:textAppearance="@style/Medium16" />

        <TextView
            android:id="@+id/Text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_4dp"
            android:text="сильная команда, с которой можно расти\n
возможность влиять на процесс и результат\n
расширенная программа ДМС: стоматология, обследования, вызов врача на дом и многое другое"
            android:textAppearance="@style/Regular16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ключевые навыки"
            android:textAppearance="@style/Medium22" />

        <TextView
            android:id="@+id/Text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_16dp"
            android:text="Знание классических алгоритмов и структуры данных\n
Программирование для Android больше одного года\n
Знание WebRTC"
            android:textAppearance="@style/Regular16" />

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 
