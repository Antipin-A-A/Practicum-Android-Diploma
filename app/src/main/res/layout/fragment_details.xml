<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu_detalies"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:title="Вакансия"
        app:titleTextAppearance="@style/Medium22" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/indent_16dp"
            android:paddingEnd="@dimen/indent_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Bold32"
                tools:text="Android-разработчик" />

            <TextView
                android:id="@+id/jobsalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Medium22"
                tools:text="от 100 000 ₽" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_16dp"
                android:paddingTop="@dimen/indent_16dp"
                app:cardBackgroundColor="@color/lightGray"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/company_logo"
                        android:src="@drawable/empty_image" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/indent_8dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/titleCadr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Medium22"
                            tools:text="Еда" />

                        <TextView
                            android:id="@+id/subtitleCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Regular16"
                            tools:text="Москва" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/Regular16"
                tools:text="Требуемый опыт" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Regular16"
                tools:text="От 1 года до 3 лет" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_8dp"
                android:textAppearance="@style/Regular16"
                tools:text="Полная занятость, Удаленная работа" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_32dp"
                android:textAppearance="@style/Medium22"
                tools:text="Описание вакансии" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_16dp"
                android:textAppearance="@style/Medium16"
                tools:text="Обязанности" />

            <TextView
                android:id="@+id/Text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_4dp"
                android:textAppearance="@style/Regular16"
                tools:text="Разрабатывать новую функциональность приложения\n
Помогать с интеграцией нашего SDK в другие приложения\n
Проектировать большие новые модули\n
Писать UI- и unit-тесты\n
Следить за работоспособностью сервиса и устранять технический долг" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_16dp"
                android:textAppearance="@style/Medium16"
                tools:text="Требования" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_4dp"
                android:textAppearance="@style/Regular16"
                tools:text="100% Kotlin \nWebRTCCI по модели Trunk \nBased Development" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_16dp"
                android:textAppearance="@style/Medium16"
                tools:text="Условия" />

            <TextView
                android:id="@+id/Text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_4dp"
                android:textAppearance="@style/Regular16"
                tools:text="сильная команда, с которой можно расти\n
возможность влиять на процесс и результат\n
расширенная программа ДМС: стоматология, обследования, вызов врача на дом и многое другое" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/Medium22"
                tools:text="Ключевые навыки" />

            <TextView
                android:id="@+id/Text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/indent_16dp"
                android:textAppearance="@style/Regular16"
                tools:text="Знание классических алгоритмов и структуры данных\n
Программирование для Android больше одного года\n
Знание WebRTC" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 
